<% if @word.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @word do |f| %>
  <%= f.input :title %>
  <%= f.input :translation %>
  <%= f.button :submit, 'Добавить', class: "btn btn-primary"  %>
<% end %>
